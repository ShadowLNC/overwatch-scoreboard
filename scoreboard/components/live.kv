# Live Widgets
<LiveManager>:
    title: title
    herostyle: herostyle
    herofilter: herofilter
    teamset: teamset

    orientation: 'vertical'
    TextInput:
        size_hint_y: 0.1
        id: title
        hint_text: "Broadcast Title"
        multiline: False
        on_text: root.callback_title(args[1])
    BoxLayout:
        size_hint_y: 0.7
        orientation: 'horizontal'
        id: teamset
        # LiveTeam objects here.
    BoxLayout:
        size_hint_y: 0.2
        orientation: 'horizontal'
        BoxLayout:
            orientation: 'vertical'
            Label:
                text: "Hero Style"
            Spinner:
                id: herostyle
                values: ('3D', 'Icons', 'Portraits')
                on_text: root.callback_herostyle()
        BoxLayout:
            orientation: 'vertical'
            Label:
                text: "Filter by Role"
            Switch:
                id: herofilter
                on_active: root.callback_herofilter()
        Button:
            text: "Swap Teams"
            on_release: root.callback_swap()


<LiveTeam>:
    title: title
    teamselect: teamselect
    players: players
    orientation: 'vertical'
    canvas.before:
        # Set in Python now.
        # Color:
        #    rgba: (0x15/255, 0x84/255, 0xb4/255, 1)
        Rectangle:
            pos: self.pos
            size: self.size
    Label:
        size_hint_y: 0.1
        id: title
    Spinner:
        size_hint_y: 0.1
        id: teamselect
        on_text: root.callback_teamselect(args[1])
    BoxLayout:
        size_hint_y: 0.8
        orientation: 'vertical'
        id: players
        # LivePlayer objects here.


<LivePlayer>:
    user: user
    role: role
    hero: hero

    orientation: 'horizontal'
    Label:
        id: user
    Label:
        id: role
    Spinner:
        id: hero
        on_text: root.callback_hero(args[1])


