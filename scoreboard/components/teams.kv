# Team Widgets
<TeamManager>:
    teamset: teamset

    orientation: 'vertical'

    BoxLayout:
        orientation: 'horizontal'
        Label:
            text: "Drag"
        Label:
            text: "Name"
        Label:
            text: "Logo"
        Label:
            text: "Colour (Hex):"
        Label:
            text: "Edit Roster"
        Label:
            text: "SR"
        Label:
            text: "Delete"

    BoxLayout:
        id: teamset
        orientation: 'vertical'
        # TeamWidget goes here.

    BoxLayout:
        orientation: 'horizontal'
        Button:
            on_press: root.addteam()
            text: "Add New Team"



<TeamWidget>:
    name: name
    logo: logo
    # Pretty sure color is a reserved word based on syntax highlighting.
    teamcolor: teamcolor
    sr: sr

    orientation: 'horizontal'

    DragHandleWidget:
    TextInput:
        id: name
        placeholder: "Team Name"
        multiline: False
        on_text: root.callback_event("name")
    BoxLayout:
        orientation: 'horizontal'
        TextInput:
            id: logo
            multiline: False
            on_text: root.callback_event("logo")
        Button:
            text: "..."
        # FileChooserIconView:
        #    id: team1logo
    BoxLayout:
        orientation: 'horizontal'
        TextInput:
            id: teamcolor
            multiline: False
            on_text: root.callback_event("color")
        Button:
            text: "Pick"
            on_press: root.callback_pickcolor()
    Button:
        text: "Edit Roster..."
        on_press: root.rosterview.open()
    IntInput:
        id: sr
        hint_text: "(auto)"
        on_text: root.callback_event("sr")
    DeleteWidget:
        on_press: root.callback_delete()


# The player manager for this team.
<RosterWidget>:
    playerset: playerset

    size_hint: (0.8, 0.8)
    title: "Team Roster"
    title_align: 'center'
    BoxLayout:
        orientation: 'vertical'
        BoxLayout:
            orientation: 'horizontal'
            Label:
                text: "Drag"
            Label:
                text: "BattleTag"
            Label:
                text: "Role"
            Label:
                text: "SR"
            Label:
                text: "Delete"
        BoxLayout:
            orientation: 'vertical'
            id: playerset
            # The label currently interferes as we don't have dragging setup.
            # Label:
            #    text: "Substitutes"
        BoxLayout:
            orientation: 'horizontal'
            Button:
                text: "Done"
                on_press: root.dismiss()  # Close this modal.
            Button:
                text: "Add Player..."
                on_press: root.addplayer()


<PlayerWidget>:
    battletag: battletag
    role: role
    sr: sr

    orientation: 'horizontal'
    DragHandleWidget:
    TextInput:
        id: battletag
        multiline: False
        on_text: root.callback_event("battletag")
    Spinner:
        id: role
        values: ('Damage', 'Tank', 'Support', 'Flex')
        on_text: root.callback_event("role")
    IntInput:
        id: sr
        on_text: root.callback_event("sr")
    DeleteWidget:
        on_press: root.callback_delete()

<ColorDialog>:
    picker: picker

    size_hint: (0.8, 0.8)
    title: "Select color..."
    title_align: 'center'
    BoxLayout:
        orientation: 'vertical'
        ColorPicker:
            id: picker
            # on_color: root.manager.callback_pickcolor(self.hex_color)
        Button:
            text: "Done"
            on_press: root.dismiss()
