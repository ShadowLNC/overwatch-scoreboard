# Scoreboard main
<View>:
    do_default_tab: False
    tablive: tablive
    tabmaps: tabmaps
    tabcustom: tabcustom
    tabteams: tabteams

    TabbedPanelItem:
        text: "Live"
        id: tablive

    TabbedPanelItem:
        text: "Maps"
        id: tabmaps
        # Contains a MapManager, probably instantiated from save.

    TabbedPanelItem:
        text: "Text"
        id: tabcustom

    TabbedPanelItem:
        text: "Teams"
        id: tabteams

<ExitDialog>:
    size_hint: (0.5, 0.5)
    title: "Exit?"
    title_align: 'center'

    BoxLayout:
        orientation: 'vertical'
        Label:
            text: "Are you sure you want to exit?"
        BoxLayout:
            orientation: 'horizontal'
            Button:
                text: "Cancel"
                on_release: root.dismiss()
            Button:
                text: "Exit"
                on_release: root.exitfunc()
