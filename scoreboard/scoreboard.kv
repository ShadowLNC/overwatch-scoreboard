# Scoreboard main
<View>:
    do_default_tab: False
    tablive: tablive
    tabmaps: tabmaps
    tabcustom: tabcustom
    tabteams: tabteams

    TabbedPanelItem:
        text: "Live"
        id: tablive

    TabbedPanelItem:
        text: "Maps"
        id: tabmaps
        # Contains a MapManager, probably instantiated from save.

    TabbedPanelItem:
        text: "Text"
        id: tabcustom

    TabbedPanelItem:
        text: "Teams"
        id: tabteams

    TabbedPanelItem:
        text: "testing"
        BoxLayout:
            orientation: 'vertical'
            ActionBar:
                ActionView:
                    ActionPrevious:
                        title: 'Title'
                        with_previous: False
                    ActionOverflow:

                    ActionLabel:
                        text: "Team Editor"
                    ActionGroup:
                        text: "Group"
                        ActionButton:
                            text: "a"
                        ActionButton:
                            text: "x"
                        #values: ('a', 'x')
                    ActionButton:
                        text: "New Team +"

            Label:
                text: "Team list"
